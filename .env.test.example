# E2E Test Environment Variables
# Copy this file to .env.test and fill in the actual values

# Application URLs
TEST_BASE_URL=http://localhost:3000
TEST_API_URL=http://localhost:5001/PROJECT_ID/us-central1/api

# Test user credentials
# Create a test user in Firebase Auth with these credentials
TEST_USER_EMAIL=test@velocityos.test
TEST_USER_PASSWORD=TestPassword123!

# Secondary test user (for multi-user scenarios)
TEST_USER_EMAIL_2=test2@velocityos.test
TEST_USER_PASSWORD_2=TestPassword456!

# Firebase test project (optional - for using Firebase emulators)
FIREBASE_TEST_PROJECT_ID=velocityos-test

# Google Workspace test credentials
# For testing Google OAuth, Gmail, Calendar, Drive integration
TEST_GOOGLE_EMAIL=test@gmail.com
TEST_GOOGLE_PASSWORD=testpassword123
TEST_GOOGLE_WORKSPACE_DOMAIN=example.com

# Google Voice test credentials
TEST_GOOGLE_VOICE_NUMBER=(555) 123-4567

# Google Pay test configuration
TEST_GOOGLE_PAY_ENABLED=false
TEST_GOOGLE_PAY_TEST_MODE=true

# Gemini AI test configuration
TEST_GEMINI_API_KEY=your-gemini-api-key-here
TEST_GEMINI_MODEL=gemini-pro

# API timeouts (in milliseconds)
API_TIMEOUT=10000

# Test data configuration
TEST_DATA_CLEANUP=true
