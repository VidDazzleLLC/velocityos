{
  "name": "velocityos-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for VelocityOS API",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "echo 'No TypeScript build needed - using JavaScript'",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "validate": "node validate.js",
    "list-routes": "node list-routes.js",
    "test": "echo \"no backend tests yet\" && exit 0"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^6.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.0",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.2.0"
  },
  "private": true
}
