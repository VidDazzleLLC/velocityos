# Firebase Configuration
# Get these values from Firebase Console > Project Settings > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Google Workspace OAuth Configuration
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Note: The client ID is the same as NEXT_PUBLIC_FIREBASE_API_KEY when using Firebase Auth

# Gemini AI Configuration for Autonomous Operations
# Get this from Google AI Studio > API Keys
# Required for AI-autonomous business operations (email responses, scheduling, decisions)
GEMINI_API_KEY=your_gemini_api_key_here

# VelocityOS AI Autonomous Mode
# Set to 'true' to enable fully autonomous AI operations (recommended for production)
AI_AUTONOMOUS_MODE_ENABLED=true
